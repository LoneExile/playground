# DigitalOcean API Token
# Required for authenticating with DigitalOcean API
export DO_TOKEN=

# DigitalOcean Project ID
# Optional: Specify the project to organize resources
export DO_PROJECT_ID=

# DigitalOcean Spaces Access ID
# Required for S3-compatible backend (Terragrunt state storage)
export DO_SPACES_ACCESS_ID=

# DigitalOcean Spaces Secret Key
# Required for S3-compatible backend (Terragrunt state storage)
export DO_SPACES_SECRET_KEY=

# DigitalOcean Spaces Bucket Name
# Required for S3-compatible backend (Terragrunt state storage)
# Default: private-cloud-office-server
export DO_SPACES_BUCKET=

# AWS Credentials for S3 Backend (mapped to DigitalOcean Spaces)
# The S3 backend requires these AWS-style credential variables
export AWS_ACCESS_KEY_ID=
export AWS_SECRET_ACCESS_KEY=
export AWS_ENDPOINT_URL_S3=https://sgp1.digitaloceanspaces.com
